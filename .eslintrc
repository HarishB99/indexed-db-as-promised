{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "import/no-extraneous-dependencies": [2, {
      "devDependencies": true
    }],
    "no-use-before-define": [2, {
      "functions": false
    }],
    'space-before-function-paren': [2, "never"],
    "arrow-body-style": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-shadow": 0,
    "no-cond-assign": 0
  }
}
